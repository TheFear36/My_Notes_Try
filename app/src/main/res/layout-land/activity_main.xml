<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_notes_list"
        android:name="com.thefear.seconttrymynotes.fragments.NotesListFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fragment_notes_info"
        tools:context=".fragments.NotesListFragment"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_notes_info"
        android:name="com.thefear.seconttrymynotes.fragments.NotesInfoFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_notes_list"
        tools:context=".fragments.NotesInfoFragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>